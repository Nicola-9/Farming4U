<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/headerSensors"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/switchSensorsLeft"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/key_arrow_left"
                android:tint="#717171" />

            <ImageView
                android:id="@+id/sensorsImage"
                android:layout_width="175dp"
                android:layout_height="150dp"
                android:src="@drawable/beacon_ble" />

            <ImageButton
                android:id="@+id/switchSensorsRight"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/key_arrow_right"
                android:tint="#717171" />

        </LinearLayout>

        <TextView
            android:id="@+id/sensorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sensore Vigneto"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_below="@id/headerSensors"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSensore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meteo_3"
                />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:text="  9:00"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dati rilevati dal sensore"
                android:layout_margin="5dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSensore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meteo_3"
                />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:text="12:00"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dati rilevati dal sensore"
                android:layout_margin="5dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSensore3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meteo_3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="15:00"
                android:textAppearance="?attr/textAppearanceHeadline6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dati rilevati dal sensore"
                android:layout_margin="5dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSensore4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meteo_3"
                />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:text="18:00"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dati rilevati dal sensore"
                android:layout_margin="5dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSensore5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meteo_3"
                />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:text="21:00"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dati rilevati dal sensore"
                android:layout_margin="5dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageSensore6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/meteo_3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:text="24:00"
                android:textAppearance="?attr/textAppearanceHeadline6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Dati rilevati dal sensore"
                android:layout_margin="5dp"
                android:textAppearance="?attr/textAppearanceSubtitle1"

                />

        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingAggiungiSensore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_baseline_add_24"
        app:tint="#fff"
        android:backgroundTint="#00B1FF"
        />
</LinearLayout>
