<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toRightOf="@id/warning_icon"
            android:layout_below="@id/warning_time"
            android:id="@+id/warning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="UmiditÃ  bassa "
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/mtrl_list_item_tint"/>

        <TextView
            android:layout_toRightOf="@id/warning_icon"
            android:id="@+id/warning_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:paddingEnd="16dp"
            android:text="03/07 alle 12:45"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/mtrl_list_item_tint" />


        <ImageView
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/warning_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/warning_text"
            android:src="@drawable/ic_warning_giallo" />




    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>